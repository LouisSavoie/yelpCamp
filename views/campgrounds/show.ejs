<%- include("../partials/header") -%>

<!-- LEFT PANEL -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <!-- WIP add MAP -->
        </div>

        <!-- CAMPGROUND CARD -->
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src="<%= campground.image %>" alt="">
                <div class="card-body d-flex justify-content-between pb-0">
                    <h4><a href=""><%= campground.name%></a></h4>
                    <h4>$9.00/Night</h4>
                </div>
                <div class="card-body pb-0">
                    <p><%= campground.description %></p>
                </div>
                <div class="card-body d-flex justify-content-between pt-0">
                    <p class="mb-0"><em>Submitted by <%= campground.author.username %>.</em></p>
                    <!-- WIP add # of reviews --> <p class="mb-0">4 Reviews</p>
                </div>
                <div class="card-body d-flex justify-content-between pt-0">
                    <div>
                        <a class="btn btn-sm btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                    <!-- WIP add rating --> <p class="align-middle mb-0">* * * * * Stars</p>
                </div>
            </div>

            <!-- COMMENT SECTION -->
            <div class="card mt-3">
                <div class="card-body d-flex justify-content-end">
                    <p class="mb-0"><a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a></p>
                </div>
                <hr class="m-0">
                <div class="card-body">
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <!-- WIP add rating -->
                                        <strong><%= comment.author.username %></strong>
                                    </div>
                                    10 days ago
                                </div>
                                <p>
                                    <%= comment.text %>
                                </p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") -%>