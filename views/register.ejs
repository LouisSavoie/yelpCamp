<%- include("partials/header") -%>

<div class="container mt-5">
    <div class="row d-block">

        <h1 style="text-align: center;">Sign Up</h1>

        <div class="col-xl-4 col-lg-5 col-md-7 col-sm-10 mx-auto mt-4">

            <form action="/register" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Sign Up</button>
                </div>
            </form>

            <p class="centered">Already have an account? <a class="custom-link" href="/login"><strong>Login!</strong></a></p>

            <!-- Back Button -->
            <a href="./">
                <button class="btn back-button"><i class="fas fa-arrow-circle-left"></i> Back</button>
            </a>

        </div>
    </div>
</div>

<%- include("partials/footer") -%>