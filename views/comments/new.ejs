<%- include("../partials/header") -%>

<div class="container mt-5">
    <div class="row d-block">

        <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>

        <div class="col-xl-4 col-lg-5 col-md-7 col-sm-10 mx-auto mt-4">
            
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <label for="comment">Comment:</label><br>
                    <textarea id="comment" class="form-control" name="comment[text]" placeholder="Comment" cols="" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>

            <!-- Back Button -->
            <a href="./">
                <button class="btn back-button"><i class="fas fa-arrow-circle-left"></i> Back</button>
            </a>
        </div>
        
    </div>
</div>


<%- include("../partials/footer") -%>